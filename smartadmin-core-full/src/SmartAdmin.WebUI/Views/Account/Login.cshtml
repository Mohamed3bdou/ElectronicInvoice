@model SmartAdmin.WebUI.Models.CompanyInfo
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>
        تسجيل الدخول
    </title>
    <base href=".">
    <meta name="description">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="msapplication-tap-highlight" content="no">
    <link id="vendorsbundle" rel="stylesheet" media="screen, print" href="~/css/vendors.bundle-rtl.css">
    <link id="appbundle" rel="stylesheet" media="screen, print" href="~/css/app.bundle-rtl.css">
    <link id="mytheme" rel="stylesheet" media="screen, print" href="~/css/themes/cust-theme-3-rtl.css">
    <link id="myskin" rel="stylesheet" media="screen, print" href="~/css/skins/skin-master-rtl.css">
    <link rel="stylesheet" media="screen, print" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Custom.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/datagrid/datatables/datatables.bundle-rtl.css">
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/select2/select2.bundle.css">
    <link rel="stylesheet" media="screen, print" href="~/css/notifications/toastr/toastr-rtl.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/notifications/sweetalert2/sweetalert2.bundle-rtl.css" />
    <link href="https://fonts.googleapis.com/earlyaccess/droidarabickufi.css" rel="stylesheet" />
</head>
<body class="desktop chrome webkit pace-done" style="font-family: 'Droid Arabic Kufi', serif;font-weight:bold;">
    <div class="pace  pace-inactive">
        <div class="pace-progress" data-progress-text="100%" data-progress="99" style="transform: translate3d(100%, 0px, 0px);">
            <div class="pace-progress-inner"></div>
        </div>
        <div class="pace-activity"></div>
    </div>



    <!-- BEGIN Page Wrapper -->
    <div class="page-wrapper">
        <div class="page-inner bg-brand-gradient">
            <div class="page-content-wrapper bg-transparent m-0">
                <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
                    <div class="d-flex align-items-center container p-0">
                        <div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9">
                            <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
                                <img src="~/img/@(Settings.Theme.Logo)" alt="@Settings.AppFlavor" aria-roledescription="logo">
                                <span class="page-logo-text mr-1">@Settings.AppName</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="flex-1" style="background: url(&#39;/img/svg/pattern-1.svg&#39;) no-repeat center bottom fixed; background-size: cover;">
                    <div class="container py-4 my-lg-5 px-4 px-sm-0">
                        <div class="row">


                            <div class="col col-md-6 col-lg-7 hidden-sm-down" style="padding-top:150px;">
                                <div class="row">
                                    <div class="pull-left login-desc-box-l">
                                        <div class="login-app-icons">
                                            <img src="~/img/AccLogo.png" alt="" style="max-width:600px;margin-top:-100px" class="display-image" />
                                        </div>
                                    </div>


                                    <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 ml-auto">
                                        <h6>
                                            <p style="color:white;">
                                                <b>
                                                    Copy Rights Reserved to Madaen Al Jazera for IT
                                                </b>
                                            </p>
                                        </h6>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <h6>
                                            <p style="color:white;">
                                                <b> جميع الحقوق محفوظة لشركة مدائن الجزيرة</b>
                                            </p>
                                        </h6>
                                    </div>
                                </div>
                            </div>





                            <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 ml-auto">
                                <h1 class="text-white fw-300 mb-3 d-sm-block d-md-none">
                                    تسجيل الدخول
                                </h1>
                                <div class="card p-4 rounded-plus bg-faded">
                                    <form id="js-login" method="post" asp-antiforgery="true">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="s_user_name"> اسم المستخدم</label>
                                            <input type="text" asp-for="s_user_name" class="form-control" placeholder="من فضلك ادخل اسم المستخدم" required="required" />
                                            <div class="invalid-feedback">من فضلك ادخل اسم المستخدم</div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label" asp-for="s_user_password"> كلمة المرور</label>
                                            <input type="password" asp-for="s_user_password" class="form-control" placeholder="من فضلك ادخل كلمة المرور" required="required" />
                                            <div class="invalid-feedback">من فضلك ادخل  كلمة المرور</div>
                                        </div>
                                        <div asp-validation-summary="All" class="alert alert-danger text-dark"></div>

                                        <div class="row no-gutters">
                                            <div class="col text-center">
                                                <button id="js-login-btn" type="submit" onclick="loginF();" class="btn btn-success btn-block btn-lg">تسجيل الدخول</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-block text-center text-white">
                        2022 © @(Settings.AppFlavorSubscript) by&nbsp;<a href="http://ultra-visions.com/" class="text-white opacity-40 fw-500" title="ultra-visions.com" target="_blank">Ultra-Visions</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- END Page Wrapper -->

    <script src="~/js/vendors.bundle.js"></script>
    <script src="~/js/app.bundle.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/formplugins/select2/select2.bundle.js"></script>
    <script src="~/js/notifications/toastr/toastr.js"></script>
    <script src="~/js/notifications/sweetalert2/sweetalert2.bundle.js"></script>


    <script>
        function loginF() {
            debugger;
            var form = $("#js-login");

            if (form[0].checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
                form.addClass('was-validated');
                return;
            }

            $.ajax({
                url: '@Url.Action("Login", "Account")',
                dataType: "json",
                data: null,
                type: "Post"
            });

        }

        $(document).ready(function () {
            $("#n_branch_id").select2({ dir: "rtl"});
        });

    </script>

</body>
</html>